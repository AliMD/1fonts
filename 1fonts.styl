quote(str)
  unquote("'")+str+unquote("'")

fontface(font)
  @font-face
    font-family quote(font[0])
    font-style font[3] || normal
    font-weight font[4] || 400
    src url(fonts_folder+font[2]+'.eot')
    src local(font[1]),
        url(fonts_folder+font[2]+'.eot') format('embedded-opentype'),
        url(fonts_folder+font[2]+'.woff') format('woff'),
        url(fonts_folder+font[2]+'.ttf') format('truetype')

for font in fonts_list
  fontface font

if fonts_class 
  tmp = 0
  for font,i in fonts_list
    tmp[i] = font[1]
    if tmp[i - 1] != tmp[i]
      {'.'+font[0]}
        font-family font[1], font[0], Verdana, Geneva, sans-serif
        -webkit-font-smoothing antialiased
